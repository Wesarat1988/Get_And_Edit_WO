    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <!-- (ไม่บังคับ) ตั้งชื่อไฟล์ DLL ให้จำง่าย -->
    <!-- <AssemblyName>WorkOrder.Plugin</AssemblyName> -->
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Contracts\Contracts.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="plugin.json" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="NModbus4" Version="2.0.305" />
    <PackageReference Include="System.CodeDom" Version="8.0.0" />
    <PackageReference Include="System.IO.Ports" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DeltaLibrary">
      <HintPath>Libs/DeltaLibrary.dll</HintPath>
    </Reference>
  </ItemGroup>
