<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<!-- ให้ตรงกับ Host (ถ้า Host เป็น net8.0 ให้ใช้ net8.0) -->
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- (ไม่บังคับ) ตั้งชื่อไฟล์ DLL ให้จำง่าย -->
		<!-- <AssemblyName>WorkOrder.Plugin</AssemblyName> -->
	</PropertyGroup>

	<!-- ให้ใช้คอมโพเนนต์ Razor/Blazor ใน class library -->
	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<!-- อ้างอิง Contracts ของคุณ (แบบ ProjectReference หรือ Reference DLL ก็ได้) -->
	<ItemGroup>
		<ProjectReference Include="..\Contracts\Contracts.csproj" />
		<!-- หรือ
    <Reference Include="Contracts">
      <HintPath>..\path\to\Contracts.dll</HintPath>
    </Reference>
    -->
	</ItemGroup>

        <!-- ถ้าต้องการให้ plugin.json ติดไปกับ output ของปลั๊กอิน -->
        <ItemGroup>
                <None Include="plugin.json" CopyToOutputDirectory="Always" />
        </ItemGroup>

        <ItemGroup>
                <PackageReference Include="NModbus4" Version="2.0.305" />
                <PackageReference Include="System.CodeDom" Version="8.0.0" />
                <PackageReference Include="System.IO.Ports" Version="8.0.0" />
        </ItemGroup>

        <ItemGroup>
                <Reference Include="DeltaLibrary">
                        <HintPath>Libs/DeltaLibrary.dll</HintPath>
                </Reference>
        </ItemGroup>
</Project>
