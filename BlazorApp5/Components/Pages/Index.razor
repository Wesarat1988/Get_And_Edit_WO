        if (!root.TryGetProperty("Message", out var messages) || messages.ValueKind != JsonValueKind.Array)
        {
            return new List<WorkOrderEntry>();
        }

        var list = new List<WorkOrderEntry>();
        foreach (var item in messages.EnumerateArray())
